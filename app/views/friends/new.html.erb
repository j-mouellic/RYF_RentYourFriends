<%= simple_form_for @friend do |f| %>
  <%= f.input :name %>
  <%= f.input :date_of_birth, as: :date %>
  <%= f.input :price, input_html: { min: 0 } %>
  <%= f.input :genre %>
  <%= f.input :address %>

  <%= f.input :activity_wedding, as: :boolean %>
  <%= f.input :activity_sam, as: :boolean %>
  <%= f.input :activity_diner, as: :boolean %>
  <%= f.input :activity_birthday, as: :boolean %>
  <%= f.input :activity_bowling, as: :boolean %>
  <%= f.input :activity_hike, as: :boolean %>
  <%= f.input :activity_movie, as: :boolean %>
  <%= f.input :activity_picnic, as: :boolean %>
  <%= f.input :activity_concert, as: :boolean %>
  <%= f.input :activity_karaoke, as: :boolean %>
  <%= f.input :activity_shopping, as: :boolean %>
  <%= f.input :activity_sport, as: :boolean %>
  <%= f.input :activity_barbecue, as: :boolean %>
  <%= f.input :activity_camping, as: :boolean %>
  <%= f.input :activity_paintball, as: :boolean %>

  <%= f.input :default_complotist, as: :boolean %>
  <%= f.input :default_impatient, as: :boolean %>
  <%= f.input :default_disorganized, as: :boolean %>
  <%= f.input :default_cheap, as: :boolean %>
  <%= f.input :default_arrogant, as: :boolean %>

  <%= f.input :quality_funny, as: :boolean %>
  <%= f.input :quality_reliable, as: :boolean %>
  <%= f.input :quality_honest, as: :boolean %>
  <%= f.input :quality_good_looking, as: :boolean %>
  <%= f.input :quality_brave, as: :boolean %>

  <%= f.input :user_id, as: :hidden, value: current_user.id %>
  <%= f.input :photo, as: :file  %>
  <%= f.input :description %>

  <%= f.button :submit %>
<% end %>
