<div class= "card-home">
  <div class="friend align-items-center">
      <p class="friend-title" style="background-color: <%= friend_color %>"><span><%= link_to friend.name.capitalize, friend_path(friend), id: "title" %></span></p>
    <div class="name-qualities d-flex">
      <%= cl_image_tag friend.photo.key, height: 300, width: 300, crop: :fill, class: "home-avatar"%>
      <div class="friend-qualities-card">
        <% qualities = [] %>
        <% if friend.genre == "Homme" %>
          <% qualities.push "drôle" if friend.quality_funny%>
          <% qualities.push "fiable" if friend.quality_reliable%>
          <% qualities.push "honnête" if friend.quality_honest%>
          <% qualities.push "Stylé" if friend.quality_good_looking%>
          <% qualities.push "Courageux" if friend.quality_brave%>
          <% 3.times do %>
            <% if qualities.any? %>
              <% quality = qualities.sample %>
              <p><mark><%= quality.capitalize %></mark></p>
              <% qualities.delete(quality) %>
            <% end %>
          <% end %>
        <% else %>
          <% qualities.push "drôle" if friend.quality_funny%>
          <% qualities.push "fiable" if friend.quality_reliable%>
          <% qualities.push "honnête" if friend.quality_honest%>
          <% qualities.push "Stylée" if friend.quality_good_looking%>
          <% qualities.push "Courageuse" if friend.quality_brave%>
          <% 3.times do %>
            <% if qualities.any? %>
              <% quality = qualities.sample %>
              <p><mark><%= quality.capitalize %></mark></p>
              <% qualities.delete(quality) %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="friend-bottom d-flex justify-content-between align-items-center">
    <div class="friend-activities-grid">
      <% activities = [] %>
      <% activities.push ({ icone: "fa-solid fa-ring", title: "Mariage"}) if friend.activity_wedding %>
      <% activities.push ({ icone: "fa-solid fa-car", title: "Être ton Sam" }) if friend.activity_sam %>
      <% activities.push ({ icone: "fa-solid fa-utensils", title: "Un dîner"}) if friend.activity_diner %>
      <% activities.push ({ icone: "fa-solid fa-cake-candles", title: "Anniversaire"}) if friend.activity_birthday %>
      <% activities.push ({ icone: "fa-solid fa-bowling-ball", title: "Bowling"}) if friend.activity_bowling %>
      <% activities.push ({ icone: "fa-solid fa-person-hiking", title: "Randonner"}) if friend.activity_hike %>
      <% activities.push ({ icone: "fa-solid fa-film", title: "Cinema" }) if friend.activity_movie %>
      <% activities.push ({ icone: "fa-solid fa-campground", title: "Pic-nic"}) if friend.activity_picnic %>
      <% activities.push ({ icone: "fa-solid fa-guitar", title: "Concert" }) if friend.activity_concert %>
      <% activities.push ({ icone: "fa-solid fa-music", title: "Karaoke"}) if friend.activity_karaoke %>
      <% activities.push ({ icone: "fa-solid fa-bag-shopping", title: "Shopping" }) if friend.activity_shopping %>
      <% activities.push ({ icone: "fa-solid fa-dumbbell", title: "Sport" }) if friend.activity_sport %>
      <% activities.push ({ icone: "fa-solid fa-fire-burner", title: "Barbecue" }) if friend.activity_barbecue %>
      <% activities.push ({ icone: "fa-solid fa-caravan", title: "Camping" }) if friend.activity_camping %>
      <% activities.push ({ icone: "fa-solid fa-gun", title: "Paintball" }) if friend.activity_paintball %>
      <% 4.times do %>
        <% if activities.any? %>
          <% activity = activities.sample %>

          <% icon = content_tag(:i, "", class: activity[:icone], style: "color: ##2d2d72", data_bs_toggle: "tooltip", data_bs_placement: "bottom", title: activity[:title], data_bs_custom_class: "custom-tooltip") %>
          <p><%= icon %></p>
          <% activities.delete(activity) %>
        <% end %>
      <% end %>
      <p>...</p>

    </div>
    <div class="friend-price">
      <p id="price"><%= friend.price %>€/jour</p>
      <%= link_to "Réserver", friend_path(friend), class: "button-primary" %>
    </div>
  </div>
</div>
