<div class= "card-home">
  <div class="friend align-items-center">
      <p class="friend-title" style="background-color: <%= friend_color %>"><span><%= link_to friend.name.capitalize, friend_path(friend), id: "title" %></span></p>
    <div class="name-qualities d-flex">
      <%= cl_image_tag friend.photo.key, height: 300, width: 300, crop: :fill, class: "home-avatar"%>
      <div class="friend-qualities-card">
        <% qualities = [] %>
        <% if friend.genre == "Homme" %>
          <% qualities.push "drôle" if friend.quality_funny%>
          <% qualities.push "fiable" if friend.quality_reliable%>
          <% qualities.push "honnête" if friend.quality_honest%>
          <% qualities.push "Stylé" if friend.quality_good_looking%>
          <% qualities.push "Courageux" if friend.quality_brave%>
          <% 3.times do %>
            <% if qualities.any? %>
              <% quality = qualities.sample %>
              <p><mark><%= quality.capitalize %></mark></p>
              <% qualities.delete(quality) %>
            <% end %>
          <% end %>
        <% else %>
          <% qualities.push "drôle" if friend.quality_funny%>
          <% qualities.push "fiable" if friend.quality_reliable%>
          <% qualities.push "honnête" if friend.quality_honest%>
          <% qualities.push "Stylée" if friend.quality_good_looking%>
          <% qualities.push "Courageuse" if friend.quality_brave%>
          <% 3.times do %>
            <% if qualities.any? %>
              <% quality = qualities.sample %>
              <p><mark><%= quality.capitalize %></mark></p>
              <% qualities.delete(quality) %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="friend-bottom d-flex justify-content-between align-items-center">
    <div class="friend-activities-grid">
      <% activities = [] %>
      <% activities.push "fa-solid fa-ring" if friend.activity_wedding %>
      <% activities.push "fa-solid fa-car" if friend.activity_sam %>
      <% activities.push "fa-solid fa-utensils" if friend.activity_diner %>
      <% activities.push "fa-solid fa-cake-candles" if friend.activity_birthday %>
      <% activities.push "fa-solid fa-bowling-ball" if friend.activity_bowling %>
      <% activities.push "fa-solid fa-person-hiking" if friend.activity_hike %>
      <% activities.push "fa-solid fa-film" if friend.activity_movie %>
      <% activities.push "fa-solid fa-campground" if friend.activity_picnic %>
      <% activities.push "fa-solid fa-guitar" if friend.activity_concert %>
      <% activities.push "fa-solid fa-music" if friend.activity_karaoke %>
      <% activities.push "fa-solid fa-bag-shopping" if friend.activity_shopping %>
      <% activities.push "fa-solid fa-dumbbell" if friend.activity_sport %>
      <% activities.push "fa-solid fa-fire-burner" if friend.activity_barbecue %>
      <% activities.push "fa-solid fa-caravan" if friend.activity_camping %>
      <% activities.push "fa-solid fa-gun" if friend.activity_paintball %>
      <% 4.times do %>
        <% if activities.any? %>
          <% activity = activities.sample %>
          <% icon = content_tag(:i, "", class: activity, style: "color: ##2d2d72") %>
          <p><%= icon %></p>
          <% activities.delete(activity) %>
        <% end %>
      <% end %>
      <p>...</p>

    </div>
    <div class="friend-price">
      <p id="price"><%= friend.price %>€/jour</p>
      <%= link_to "Réserver", friend_path(friend), class: "button-primary" %>
    </div>
  </div>
</div>
